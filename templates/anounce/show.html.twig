																	</div>#}

				<div></div>
				<div class="card-body">
					<h6 class="text-uppercase mb-4 font-weight-bold">Auteur</h6>
					<p>
						<i class="fas fa-name mr-3"></i>Name:Penda</p>
					<p></p>
					<i class="fas fa-home mr-3"></i>Dakar, Senegal,Parcelles Assainies
					<p></p>
					<i class="fas fa-envelope mr-3"></i>penda@gmail.com
				</p>
			</div>
		</div>
	</div>

	<div class="container  mt-5">
	<div class="row justify-content-start mt-5">

		<div class="row">
			<div class="col-12 col-md-8 col-lg-6 mx-auto">
				{{ form_start(form) }}
				{{ form_row(form.Author, {'attr': {'placeholder': "nom de l'auteur"}})}}
				{{ form_row(form.email, {'attr': {'placeholder': "email de l'auteur"}})}}
				{{ form_row(form.content, {'attr': {'placeholder': "contenue de l'auteur"}})}}


				<button class="btn btn-primary" , type="submit">Sauvegarder</button>

				{{ form_end(form) }}
			</div>

		</div>


	</div>
{% endblock %}
