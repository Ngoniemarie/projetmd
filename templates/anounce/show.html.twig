{% extends 'base.html.twig' %}
{% block title %}Details Announce !
{% endblock %}

{% block body %}


	<div
		class="">

		{#<div class="container py-5 text-center" style="background-image: url({{ annonce.coverImage }}); color:white; height:400px;">#}
		<div class="container py-5 text-center" style="background-image: url('/uploads/coverImages/d0a9d5a90ec0395e21f67517fa578e88.png'); color:white; height:400px;">


			<h6>{{ annonce.title }}</h6>
			<br>
			<p>{{ annonce.rooms }}
				chambres à
				{{ annonce.price}}</p>
			<br>
			<p>{{ annonce.introduction }}</p>


		</div>
		<div class="container">
			<p>{{ annonce.description }}</p>

		</div>
		<div class="container my-5">
			<div class="card">
				<div class="card-header">
					<h5 class="text-center">
						<strong>Commentaire</strong>
					</h5>
				</div>
				{% for comment in annonce.comments %}
					{% if comment| length > 0 %}
						<div class="row">
							<div class="col-12 col-md-12 col-lg-12">
								<div class="alert alert-success" role="alert">
									<h6>
										{{comment.author}}
										<u></u>
										{{comment.email}}
									</h6>
									<p>{{comment.content}}</p>
									{#<p>edité le
																																			k		{{ comment.createdAt|date("Y-m-d H:i:s") }}</p>#}
									<p>{{comment.createdAt |ago(locale='fr')}}</p>

								</div>
							</div>
						</div>
					{% endif %}
				{% endfor %}

				<div></div>
				{#</div>
														</div>}#
														{#<div class="container my-5">
															<div class="card">
																<div class="card-header">
																	<h5 class="text-center">
																		<strong>Auteur</strong>
																	</h5>
																</div>}#}
				{#<div class="col-12 col-md-12 col-lg-12">
